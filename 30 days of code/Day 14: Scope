class Difference:
    def __init__(self, a):
        self.__elements = a
        self.computeDifference

    def computeDifference(self):
        sortede = sorted(self.__elements)
        self.maximumDifference = abs(sortede[-1] - sortede[0])
        
	
# End of Difference class

_ = input()
a = [int(e) for e in input().split(' ')]

d = Difference(a)
d.computeDifference()

print(d.maximumDifference)
